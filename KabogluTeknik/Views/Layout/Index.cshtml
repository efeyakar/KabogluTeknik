
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Kaboğlu Teknik Sistem</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <!-- Google Fonts Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: "Montserrat", sans-serif;
        }

        header {
            background: #343a40;
            color: white;
            padding: 60px 0;
            text-align: center;
        }

        .navbar {
            background: #212529;
        }

        .navbar-brand,
        .nav-link {
            color: #fff !important;
        }

        .section-title {
            margin: 40px 0 20px;
            text-align: center;
        }

        .portfolio-item {
            transition: transform 0.3s;
        }

            .portfolio-item:hover {
                transform: scale(1.05);
            }

        footer {
            background: #212529;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        .social-icons a {
            display: inline-block;
            width: 45px;
            height: 45px;
            line-height: 45px;
            background-color: #007bff; /* Temaya uygun ana renk */
            color: #fff;
            text-align: center;
            border-radius: 50%;
            transition: background-color 0.3s;
        }

            .social-icons a:hover {
                background-color: #0056b3; /* Hover durumunda daha koyu ton */
                text-decoration: none;
            }

            .social-icons a i {
                font-size: 20px;
                vertical-align: middle;
            }
    </style>

  </head>
  <body>
    <!-- Navigation -->
    @await Component.InvokeAsync("_NavbarViewComponentPartial")

    @RenderBody()

    <!-- Footer -->
    @await Component.InvokeAsync("_FooterViewComponentPartial")
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
      // Navbar bağlantıları için yumuşak kaydırma (smooth scroll)
      document.querySelectorAll(".nav-link").forEach((link) => {
        link.addEventListener("click", function (e) {
          if (this.hash !== "") {
            e.preventDefault();
            const target = document.querySelector(this.hash);
            target.scrollIntoView({
              behavior: "smooth",
            });
          }
        });
      });
    </script>
  </body>
</html>
